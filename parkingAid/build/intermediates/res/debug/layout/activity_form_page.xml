<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" tools:context="parkingaid.lpg.com.parkingadd.FormPageFragment">

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Park Here"
    android:id="@+id/parkButton"
        android:textColor="#FFFFFF"
    android:background="@drawable/buttonshape"
    android:shadowColor="#A8A8A8"
    android:shadowDx="0"
    android:shadowDy="0"
    android:shadowRadius="3"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="25dp"
    android:padding="5dp"/>


    <EditText
        android:id="@+id/notes"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:inputType="text"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/timePicker1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/timeborder"
        android:hint="Add additional notes..."
        android:padding="5dp"
        android:gravity="center"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/cost"
        android:layout_marginBottom="110dp"
        android:layout_above="@+id/parkButton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/timeborder"
        android:padding="5dp"
        android:gravity="center"
        android:hint="Estimated Cost"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter Estimated Departure Time:"
        android:id="@+id/textView2"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/timeborder"
        android:padding="5dp"
        android:gravity="center"/>

    <TimePicker
        android:id="@+id/timePicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
